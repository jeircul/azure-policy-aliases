{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Etc/UTC",
  "schedule": ["after 01:00 on saturday and before 05:00 on saturday"],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dependency Dashboard",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "semanticCommitScope": "deps",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "packageRules": [
    {
      "description": "Automerge safe update types",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Group lower-risk GitHub Actions updates for faster reviews",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "groupName": "github-actions (non-major)",
      "groupSlug": "github-actions-non-major",
      "labels": ["dependencies", "github-actions"]
    },
    {
      "description": "Highlight breaking GitHub Actions upgrades",
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": ["major"],
      "labels": ["dependencies", "major-upgrade"]
    }
  ]
}
